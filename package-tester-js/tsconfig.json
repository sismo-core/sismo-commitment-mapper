{
  "compilerOptions": {
    "outDir": "./lib",
    "declarationDir": "./types",
    "target": "es5",
    "module": "ESNext",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": ".",
  },
  "include": [
    "src"
  ]
}